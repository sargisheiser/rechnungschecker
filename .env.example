# RechnungsChecker Environment Configuration
# Copy this file to .env and fill in the values

# Application
APP_NAME=RechnungsChecker
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rechnungschecker

# Redis
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# KoSIT Validator
KOSIT_JAR_PATH=kosit/validationtool-1.5.0-standalone.jar
KOSIT_SCENARIOS_PATH=kosit/scenarios.xml
KOSIT_TIMEOUT_SECONDS=30

# File Upload
MAX_UPLOAD_SIZE_MB=25
TEMP_FILE_TTL_SECONDS=3600

# Rate Limiting
GUEST_VALIDATIONS_LIMIT=5
GUEST_RATE_LIMIT_PER_MINUTE=10
AUTH_RATE_LIMIT_PER_MINUTE=100

# Stripe (Leave empty for development without billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_STEUERBERATER=

# Email - Mailgun (Leave empty for development)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
EMAIL_FROM=noreply@rechnungschecker.de

# Monitoring - Sentry (Leave empty for development)
SENTRY_DSN=

# OpenAI API (for enhanced PDF extraction and error explanations)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Langfuse (LLM observability - https://langfuse.com)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
